<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>E-Commerce Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles/dashboard.css">
</head>
<body>
  <div class="container">
    <div class="row">
      <% products.forEach((product) => { %>
        <div class="col-md-4 product-card">
          <div class="card" style="width: 18rem;">
            <img src="<%= product.imageURL %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= product.title %></h5>
              <p class="card-text">
                ₹<%= Number(product.currentPrice).toFixed(2) %><br>
                <sub><s>MRP: ₹<%= Number(product.mrp).toFixed(2) %></s></sub>
              </p>
              <a href="#" class="btn btn-warning">Edit product</a>
              <a href="#" class="btn btn-danger">Delete product</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <div>
      <h1>Add new product</h1>
      <form method="POST" action="/products">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" name="title" class="form-control" id="title" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input type="text" name="price" class="form-control" id="price" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
          <label for="mrp" class="form-label">MRP</label>
          <input type="text" name="mrp" class="form-control" id="mrp" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
          <label for="imageURL" class="form-label">Image URL</label>
          <input type="text" name="imageURL" class="form-control" id="imageURL" aria-describedby="emailHelp">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>